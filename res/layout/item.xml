<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtNam"
        android:textSize="26dp"
        android:textColor="#1f227b"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtLevel"
        android:textSize="20dp"
        android:layout_alignTop="@+id/txtNam"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txtDate"
        android:layout_alignBottom="@+id/txtLine"
        android:layout_alignRight="@+id/txtLine"
        android:layout_alignEnd="@+id/txtLine"
        android:layout_marginBottom="4dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtLine"
        android:background="#863030"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtNam"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>